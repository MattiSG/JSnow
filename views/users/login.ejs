	<h2>Se connecter</h2>
	<< if (typeof errors !== 'undefined' && errors.length) { >>
		<ul class="error">
			<< for (var i = 0; i < errors.length; i++) {>>
				<li><<= errors[i] >></li>
			<< } >>
		</ul>
	<<}>>
	
	<form action="/users/login" method="post">
		<dl>
			<dt><label for="<<= everyauth.password.loginFormFieldName >>">Identifiant</label></dt>
			<dd><input name="<<=everyauth.password.loginFormFieldName >>" id="<<=everyauth.password.loginFormFieldName >>" type="text" /></dd>
			<dt><label for="<<= everyauth.password.passwordFormFieldName >>">Mot de passe</label></dt>
			<dd><input name="<<= everyauth.password.passwordFormFieldName >>" id="<<= everyauth.password.passwordFormFieldName >>" type="password" /></dd>
		</dl>
		
